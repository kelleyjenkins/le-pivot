              <p><strong><%= link_to item.title, item_path(item) %></strong></p>
              <p>Price:$ <%= item.price %></p>
              <%= link_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "badge badge-primary" %></center>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</body>

<% end %>