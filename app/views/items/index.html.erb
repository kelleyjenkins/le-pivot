
<div class="container">
    <div class="row">
        <div class="col-xs-12">

          <div class="row">
            <% @items.each do |item| %>
              <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                  <%= image_tag item.image.url, size: "150" %>
                  <div class="caption">
                    <h6><%= link_to item.title, item_path(item) %></h6>
                    <p>Price: <%= number_to_currency(item.price) %></p>
                    <% unless item.retired? %>
                      <%= link_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "btn btn-sm btn-success-outline" %></center>
                    <% else %>
                      <p>Retired</p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

        </div>
    </div>
</div>













