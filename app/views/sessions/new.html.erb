<div class="container">
    <div class="row">
        <div class="col-xs-12">
          <h1>Login</h1>
          <p>Fill in the form below to join our platform or <%= link_to "Create an account", new_user_path %> </p>
        </div>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-md-4">
          <%= form_for(:session, url: login_path) do |f| %>
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>

            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>

            <%= f.submit name="Login", class: "btn btn-primary-outline", style: 'float:right; margin-top: 40px; margin-bottom: 40px;' %>
          <% end %>
        </div>
         <div class="col-md-offset-2 col-md-4">
         <p></p>
          <div class="thumbnail" style="margin-top: 26px;">
            <img src="https://image.ibb.co/by7Lu6/undraw_account_490v.png" alt="...">
          </div>

         </div>
    </div>
</div>

















<% if false %>

<div class="container">
    <%= image_tag 'login.png' %>
  <div class="row">
    <div class="col-3">
    <table class="table login-form">
      <%= form_for(:session, url: login_path) do |f| %>
        <tr>
          <td class="table-light"><%= f.label :email %></td>
          <td class="table-light"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :password %></td>
          <td class="table-light"><%= f.password_field :password %></td>
        </tr>
        <tr class="action">
          <td class="table-light"><%= f.submit name="Login", class: "btn btn-primary" %></td>
          <td class="table-light"><small>Don't have an account with us? <%= link_to "Create an account", new_user_path %>.</small></td>
        </tr>
      <% end %>
    </div>
  </div>
</div>

<% end %>
