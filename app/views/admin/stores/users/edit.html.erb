 <div class="container">
  <div class="row">
    <div class="col-3">
    <table class="table">
      <%= form_for [:admin, @user.store, @user] do |f| %>

        <tr>
          <td class="table-light"><%= f.label :first_name %></td>
          <td class="table-light"><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :last_name %></td>
          <td class="table-light"><%= f.text_field :last_name %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :email %></td>
          <td class="table-light"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :address %></td>
          <td class="table-light"><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :address_2 %></td>
          <td class="table-light"><%= f.text_field :address_2 %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :city %></td>
          <td class="table-light"><%= f.text_field :city %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :state %></td>
          <td class="table-light"><%= f.text_field :state %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :zip %></td>
          <td class="table-light"><%= f.text_field :zip %></td>
        </tr>


          <td class="table-light"><%= f.submit "Submit", class: "btn btn-primary" %></td>
          <td class="table-light"></td>
        </tr>
      <% end %>
    </div>
  </div>
</div>
